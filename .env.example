# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# PostgreSQL
DATABASE_URL=postgresql://localhost/voice_serve

# OpenAI – used by orchestrator, product research, transcript analyzer
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# Google Maps Places API
GOOGLE_MAPS_API_KEY=

# Google Gemini – query intelligence, store enrichment
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# VAPI (phone calls): get API key + phone number ID from dashboard.vapi.ai
VAPI_API_KEY=
VAPI_PHONE_NUMBER_ID=
VAPI_SERVER_URL=https://your-public-url.ngrok-free.app
VAPI_MODEL_PROVIDER=openai
VAPI_MODEL=gpt-4o
VAPI_VOICE_PROVIDER=cartesia
VAPI_VOICE=alloy
VAPI_VOICE_LANGUAGE=hi

# VAPI latency tuning
VAPI_ENDPOINTING_MS=200
VAPI_BACKGROUND_DENOISING=true
VAPI_START_SPEAKING_WAIT=0.25
VAPI_NUM_WORDS_TO_INTERRUPT=0

# Limits
MAX_STORES_TO_CALL=5
MAX_ALTERNATIVES=3

# Test mode – set to true to call only TEST_PHONE instead of real stores
TEST_MODE=false
TEST_PHONE=+91
